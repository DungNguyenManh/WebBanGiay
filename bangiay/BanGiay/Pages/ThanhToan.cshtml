@page
@model BanGiay.Pages.ThanhToanModel
@{
}


<section class="breadcrumb-section set-bg" data-setbg="/client/img/breadcrumb.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thanh toán</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Thanh toán</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="checkout spad">
    <div class="container">
        
        <div class="checkout__form">
            <h4>Chi tiết đơn hàng</h4>
            <form method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Tài khoản</p>
                                    <input type="text" value="@Model.NguoiDung.TaiKhoan" readonly>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Tên<span>*</span></p>
                                    <input type="text" name="Ten" value="@Model.NguoiDung.Ten" asp-for="Input.Ten" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input type="text" name="DiaChi" value="@Model.NguoiDung.DiaChi" asp-for="Input.DiaChi" required>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">Sản phẩm <span>Giá</span></div>
                            <ul>
                                @foreach (var item in Model.CartItems)
                                {
                                    <li>@item.Ten <span>@item.Gia.ToString("N0") đ</span></li>
                                }
                            </ul>
                            <div class="checkout__order__total">Tổng tiền <span>@Model.TongTien.ToString("N0") đ</span></div>
                            <button type="submit" class="site-btn">Thanh toán</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
