@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    <ul>
                        @foreach (var loai in Model.ListLoai)
                        {
                            <li><a asp-area="" asp-page="/DanhMuc" asp-route-id="@loai.ID">@loai.Ten</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="Bạn đang tìm gì">
                            <button type="submit" class="site-btn">TÌM KIẾM</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>0328862400</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/client/img/moi/banner.jpg">
                    <div class="hero__text">
                        <span>ĐẢM BẢO CHẤT LƯỢNG</span>
                        <h2>Uy tín <br />100%</h2>
                        <p>MIỄN PHÍ GIAO HÀNG</p>
                        <a asp-area="" asp-page="/Index" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm mới</h2>
                </div>             
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var sanPham in Model.ListSanPham)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg">
                            <a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><img src="~/client/img/featured/@sanPham.Anh" alt="@sanPham.Ten" /></a>
                            <ul class="featured__item__pic__hover">
                                <form id="addToCartForm-@sanPham.ID" method="post" asp-page-handler="AddToCart" asp-route-id="@sanPham.ID">
                                <li><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><i class="fa fa-heart"></i></a></li>
                                <li><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><i class="fa fa-retweet"></i></a></li>
                                <li>
                                    <a href="#" onclick="submitForm('@sanPham.ID'); return false;">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                </li>
                                </form>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID">@sanPham.Ten</a></h6>
                            <h5>@sanPham.Gia.ToString("N0") đ</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<script>
    function submitForm(productId) {
        var formId = "addToCartForm-" + productId;
        document.getElementById(formId).submit();
    }
</script>