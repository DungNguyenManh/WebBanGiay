@page
@model BanGiay.Pages.DanhMucModel
@{
}


<section class="breadcrumb-section set-bg" data-setbg="/client/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Danh mục sản phẩm</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Danh mục sản phẩm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Danh mục</h4>
                        <ul>
                            @foreach (var loai in Model.ListLoai)
                            {
                                <li><a asp-area="" asp-page="/DanhMuc" asp-route-id="@loai.ID">@loai.Ten</a></li>
                            }
                        </ul>
                    </div>
                
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="row">
                    @foreach (var sanPham in Model.ListSanPham)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="featured__item__pic set-bg">
                                <a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><img src="~/client/img/featured/@sanPham.Anh" alt="@sanPham.Ten" /></a>
                                <ul class="featured__item__pic__hover">
                                    <form id="addToCartForm-@sanPham.ID" method="post" asp-page-handler="AddToCart" asp-route-id="@sanPham.ID">
                                    <li><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><i class="fa fa-heart"></i></a></li>
                                    <li><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID"><i class="fa fa-retweet"></i></a></li>
                                    <li>
                                        <a href="#" onclick="submitForm('@sanPham.ID'); return false;">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    </form>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a asp-area="" asp-page="/ChiTietSanPham" asp-route-id="@sanPham.ID">@sanPham.Ten</a></h6>
                                <h5>@sanPham.Gia.ToString("N0") đ</h5>
                            </div>
                        </div>
                    }
                </div>
             
            </div>
        </div>
    </div>
</section>



<script>
    function submitForm(productId) {
        var formId = "addToCartForm-" + productId;
        document.getElementById(formId).submit();
    }
</script>