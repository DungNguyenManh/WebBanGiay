        <ul>
            <li><a asp-area="" asp-page="/GioHang"><i class="fa fa-shopping-bag"></i> <span>@SoLuong</span></a></li>
        </ul>
        <div class="header__cart__price">item: <span>@Tong.ToString("N0") đ</span></div>
    </div>
