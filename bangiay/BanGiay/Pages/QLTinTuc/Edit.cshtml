@page
@model BanGiay.Pages.QLTinTuc.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>TinTuc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TinTuc.ID" />
            <div class="form-group">
                <label asp-for="TinTuc.Ten" class="control-label"></label>
                <input asp-for="TinTuc.Ten" class="form-control" />
                <span asp-validation-for="TinTuc.Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinTuc.NoiDung" class="control-label"></label>
                <input asp-for="TinTuc.NoiDung" class="form-control" />
                <span asp-validation-for="TinTuc.NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinTuc.Anh" class="control-label"></label>
                <input type="file" asp-for="Anh" class="form-control" />
                <span asp-validation-for="TinTuc.Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

